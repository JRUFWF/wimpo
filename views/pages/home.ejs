<div class="container">
    <form method="post" action="/captcha">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="form-group col-md-8">
                <label for="order-number">Please enter your purchase order number</label>
                <input type="text" class="form-control" name="order-number">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="form-group col-md-8">
                <label for="zipcode">Shipping zip code</label>
                <input type="text" class="form-control" name="zipcode">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="form-group col-md-8">
                <!-- add your domain data-sitekey below-->
                <div class="g-recaptcha" data-sitekey=""></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-success" style="margin-left:38px">Submit</button>
            </div>
        </div>
    </form>
</div>
